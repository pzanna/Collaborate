{
  "service": {
    "name": "research_manager",
    "version": "1.0.0",
    "description": "Eunice research-manager service",
    "environment": "development"
  },
  "server": {
    "host": "0.0.0.0",
    "port": 8000,
    "debug": false
  },
  "database": {
    "url": "postgresql://eunice:eunice@localhost:5432/eunice",
    "echo": false,
    "pool_size": 10,
    "max_overflow": 20
  },
  "mcp": {
    "server_url": "ws://mcp-server:8081",
    "timeout": 30,
    "retry_attempts": 3
  },
  "logging": {
    "level": "INFO",
    "file": "/app/logs/service.log",
    "max_file_size": "100MB",
    "backup_count": 5
  },
  "health_check": {
    "enabled": true,
    "interval": 30,
    "timeout": 10
  },
  "security": {
    "cors_origins": [
      "*"
    ],
    "cors_methods": [
      "GET",
      "POST",
      "PUT",
      "DELETE"
    ],
    "cors_headers": [
      "*"
    ]
  }
}