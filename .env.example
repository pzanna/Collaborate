# Copy this file to .env and add your actual API keys

# ======================================================================
# REQUIRED API KEYS (Platform will not function fully without these)
# ======================================================================

# OpenAI API Key (Required for AI Service - GPT models)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Google Custom Search API (Required for Network Agent - Google search functionality)
# Get API key from: https://developers.google.com/custom-search/v1/introduction
# Create Custom Search Engine at: https://cse.google.com/cse/
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_SEARCH_ENGINE_ID=your_google_search_engine_id_here

# ======================================================================
# OPTIONAL API KEYS (Enhanced functionality)
# ======================================================================

# xAI API Key (Optional - Grok models for AI Service)
XAI_API_KEY=your_xai_api_key_here

# Anthropic API Key (Optional - Claude models for AI Service)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Semantic Scholar API Key (optional - increases rate limits)
SEMANTIC_SCHOLAR_API_KEY=your_semantic_scholar_api_key_here

# PubMed/NCBI API Key (optional - increases rate limits for biomedical searches)
PUBMED_API_KEY=your_pubmed_api_key_here
NCBI_API_KEY=your_ncbi_api_key_here

# Application Configuration
EUNICE_CONFIG_PATH=config/default_config.json
EUNICE_DATA_PATH=data/
EUNICE_LOG_PATH=logs/
EUNICE_LOG_LEVEL=INFO

# Server Configuration
EUNICE_HOST=127.0.0.1
EUNICE_WEB_PORT=8000

# Environment
EUNICE_ENV=development
