# Screening Agent Container - Secure Version
FROM python:3.12-slim-bookworm

# Security: Update all packages to latest versions
RUN apt-get update && apt-get upgrade -y && \
    apt-get install -y --no-install-recommends \
    curl \
    ca-certificates \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/* \
    && rm -rf /tmp/* \
    && rm -rf /var/tmp/*

# Security: Create non-root user with minimal privileges
RUN groupadd -r screeningagent && \
    useradd -r -g screeningagent -d /app -s /sbin/nologin \
    -c "Screening Agent User" screeningagent

# Set working directory
WORKDIR /app

# Security: Copy and install requirements with specific versions
COPY requirements.txt .
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt && \
    pip cache purge

# Copy application code
COPY src/ ./src/
COPY config/ ./config/

# Security: Set strict file permissions
RUN chown -R screeningagent:screeningagent /app && \
    chmod -R 755 /app && \
    chmod -R 644 /app/src/*.py /app/config/*.json

# Security: Remove unnecessary packages and files
RUN apt-get autoremove -y && \
    apt-get autoclean && \
    find /usr/local -name '*.pyc' -delete && \
    find /usr/local -name '*.pyo' -delete && \
    find /usr/local -name '*__pycache__*' -delete

# Switch to non-root user
USER screeningagent

# Security: Run on non-privileged port
EXPOSE 8004

# Security: Enhanced health check with timeout
HEALTHCHECK --interval=30s --timeout=5s --start-period=10s --retries=3 \
    CMD curl -f http://localhost:8004/health || exit 1

# Security: Use exec form to prevent shell injection
CMD ["python", "-u", "src/screening_service.py"]
